            <ResourceDictionary.MergedDictionaries>
                <!--<ResourceDictionary Source="Styles/SplitViewStyles.xaml" />-->
                <ResourceDictionary Source="Styles/NavRadioButtonStyle.xaml" />
                <ResourceDictionary Source="Styles/StandardStyle.xaml" />
                <ResourceDictionary x:Name="Dark" Source="Styles/DarkTheme.xaml"/>
                <ResourceDictionary Source="Mdl2/Mdl2.xaml" />
                <!--<ResourceDictionary x:Name="Light" Source="Styles/LightTheme.xaml"/>-->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
